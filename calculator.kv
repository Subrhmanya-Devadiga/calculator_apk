<Button>
    background_normal:""
    background_color:(0,0,0,1)


<CalcUi>

    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height

        Label:
            text:"Simple Calculator"
            font_size:"60dp"
            size_hint:(1,.1)
            canvas.before:
                Color:
                    rgba:(1,1,1,1)
                Rectangle:
                    pos:self.pos
                    size:self.size


        TextInput:
            id:calcinput
            size_hint: (1,.3)
            background_normal:""
            background_color:(1,1,1,1)
            font_size:"60dp"
            multiline:True
            text:"0"
            halign:"right"
            yalign:"right"
            

        GridLayout:
            cols:4
            rows:5
            canvas.before:
                Color:
                    rgba:(0,0,0,1)
                Rectangle:
                    pos:self.pos
                    size:self.size
            #spacing:2
            #padding:2
            
            Button:
                text:"%"
                font_size:60
                background_normal:""
                background_color:(252/255,78/255,3/255,1)
                on_press: root.percent()
            Button:
                text:"CE"
                font_size:55
                background_color:(252/255,78/255,3/255,1)
                on_press: root.clear()
            Button:
                id:clear
                text:"<-"
                font_size:60
                background_color:(252/255,78/255,3/255,1)
                on_press:root.bit_clear()

                
            Button:
                text:"/"
                font_size:50
                background_color:(0,54/255,163/255,1)
                on_press:root.button_value("/")

            Button:
                text: "7"
                font_size:60
                on_press:root.button_value(7)
            Button:
                text: "8"
                font_size:60
                on_press:root.button_value(8)
            Button:
                text: "9"
                font_size:60
                on_press:root.button_value(9)
            Button:
                text: "*"
                font_size:60
                background_color:(0,54/255,163/255,1)
                on_press:root.button_value("*")

            Button:
                text: "4"
                font_size:60
                on_press:root.button_value(4)
            Button:
                text: "5"
                font_size:60
                on_press:root.button_value(5)
            Button:
                text: "6"
                font_size:60
                on_press:root.button_value(6)
            Button:
                text: "-"
                font_size:60
                background_color:(0,54/255,163/255,1)
                on_press:root.button_value("-")

            Button:
                text: "1"
                font_size:60
                on_press:root.button_value(1)
            Button:
                text: "2"
                font_size:60
                on_press:root.button_value(2)
            Button:
                text: "3"
                font_size:60
                on_press:root.button_value(3)
            Button:
                text: "+"
                font_size:60
                background_color:(0,54/255,163/255,1)
                on_press:root.button_value("+")

            Button:
                text: "+/-"
                font_size:60
                on_press:root.change_sign()
            Button:
                text: "0"
                font_size:60
                on_press:root.button_value(0)
            Button:
                text: "."
                font_size:60
                on_press:root.dot()
            Button:
                text: "="
                font_size:60
                background_color:(0,54/255,163/255,1)
                on_press:root.equals()